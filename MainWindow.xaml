<Window x:Class="Tabel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tabel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Background="#FAEBD7">
        <Label Margin="5" HorizontalAlignment="Center">Табель</Label>
        <Grid>
            <Menu>
                <MenuItem x:Name="Organization" Header="Организации" Click="Organization_OnClick"></MenuItem>
                <MenuItem x:Name="Employee" Header="Сотрудники" Click="Employee_OnClick"></MenuItem>
                <MenuItem x:Name="Division" Header="Подразделения" Click="Division_OnClick"></MenuItem>
                <MenuItem x:Name="DayType" Header="Рабочий день" Click="DayType_OnClick"></MenuItem>
            </Menu>
        </Grid>
        <Grid x:Name="grid1" Background="#FAEBD7">
            <Button x:Name="button1" Content="Сформировать табель" Background="#E9967A" Margin="319,163,312,-206" Click="OpenTabel" />
        </Grid>
    </StackPanel>
</Window>
